void fragment(){
	vec2 tiled_uvs = UV * tiled_factor; 
	tiled_uvs.y *= aspect_ratio;
	
	vec2 waves_uv_offset;
	waves_uv_offset.x = cos(TIME * time_scale.x + (tiled_uvs.x + tiled_uvs.y)) * 0.05;
	waves_uv_offset.y = sin(TIME * time_scale.y + (tiled_uvs.x + tiled_uvs.y)) * 0.05;

	COLOR = vec4(waves_uv_offset / 0.05, 0.0,1.0);
	COLOR = texture(TEXTURE, tiled_uvs + waves_uv_offset * amplitude);
}

